<div class="container" style="margin-top: 70px;">
  <h2>All Our Flats</h2>
  <p>All <%= @flats.count %> flats.</p>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card mb-4 custom-card">
          <div style="height: 200px; overflow: hidden;"> <!-- Fixed height container -->
            <img src="<%= flat.picture_url %>" class="card-img-top" alt="Flat image" style="object-fit: cover; width: 100%; height: 100%;">
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text">
              <%= flat.address %><br>
              <i class="fa-solid fa-user-group"></i><span class="icon-text"><%= flat.number_of_guests %>&nbsp;&nbsp;&nbsp;</span>
              <i class="fa-solid fa-euro-sign"></i><span class="icon-text"><%= flat.price_per_night %></span>
            </p>
          </div>
          <div class="card-footer d-flex justify-content-start align-items-center">
            <a href="#" class="btn btn-primary mr-2">
              <i class="fas fa-info-circle"></i> More Info
            </a>
            <a href="#" class="btn btn-secondary mr-2">
              <i class="fas fa-edit"></i> Edit
            </a>
            <a href="#" class="btn btn-danger">
              <i class="fas fa-trash-alt"></i> Remove
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
