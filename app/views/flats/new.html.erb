<div class="container bg-light p-4" style="max-width: 400px;">
  <h2 class="mb-4">Add a New Flat</h2>
  <%= form_with model: @flat do |f| %>
    <div class="form-group mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 2, class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :picture_url %>
      <%= f.text_field :picture_url, class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :price_per_night %>
      <%= f.number_field :price_per_night, class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :number_of_guests %>
      <%= f.number_field :number_of_guests, class: "form-control" %>
    </div>
    <div class="text-center mt-3">
      <%= f.submit "Create Flat", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
